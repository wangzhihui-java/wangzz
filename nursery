public class nursery {
public static void main(String[] args) {
	int i=99;
	for(;i>=1;i--) { 
		if (i>2) {
			System.out.println(i+"bottles of beers on the wall,"+i+"bottles of beer");
			System.out.println("Take one down.Pass it around");
			System.out.println(i-1+"bottles on the wall");}
	    	else if(i==2){
	    	System.out.println(i+"bottles of beers on the wall,"+i+"bottles of beer");
	    	System.out.println("Take one down.Pass it around");
	    	System.out.println("1"+"bottle on the wall");}
	    	else{
	    	System.out.println(i+"bottle of beers on the wall,"+i+"bottle of beer");
			System.out.println("Take one down.Pass it around");
			System.out.println("No"+"bottle on the wall");
		}
	}
	}
}
